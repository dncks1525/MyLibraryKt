<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/app_text_normal</item>
    </style>

    <style name="BookDetailText" parent="AppText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BookDetailText.Title">
        <item name="android:maxLines">3</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BookDetailText.Subtitle">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookDetailText.Describe">
        <item name="android:maxLines">100</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="BookDetailText.Label">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookListText" parent="AppText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BookListText.Title">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BookListText.Subtitle">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
