<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/book_simple_width"
    android:layout_height="@dimen/book_simple_height"
    android:orientation="vertical"
    tools:background="#CFF0FA">

    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="@dimen/book_simple_cover_img_width"
        android:layout_height="@dimen/book_simple_cover_img_height"
        tools:src="@drawable/book_sample" />

    <TextView
        android:id="@+id/priceTxt"
        style="@style/AppText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom|end"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="@string/sample" />
</LinearLayout>